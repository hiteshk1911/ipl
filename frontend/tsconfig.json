{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@core/*": ["./src/core/*"],
      "@data/*": ["./src/data/*"],
      "@domain/*": ["./src/domain/*"],
      "@features/*": ["./src/features/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
